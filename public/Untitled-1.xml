<svg width="100" height="100" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <!-- Gradient for background -->
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2563EB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#9333EA;stop-opacity:1" />
    </linearGradient>
    
    <!-- Shadow filter -->
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="2" dy="4" stdDeviation="3" flood-color="#000000" flood-opacity="0.3"/>
    </filter>
  </defs>
  
  <!-- Background circle -->
  <circle cx="50" cy="50" r="48" fill="url(#bgGradient)" filter="url(#shadow)"/>
  
  <!-- Main building structure -->
  <g fill="white">
    <!-- Main building body -->
    <rect x="25" y="45" width="50" height="30" rx="2" fill="white" opacity="0.95"/>
    
    <!-- Building roof -->
    <polygon points="20,45 50,30 80,45" fill="white" opacity="0.95"/>
    
    <!-- Central tower -->
    <rect x="45" y="35" width="10" height="15" fill="white" opacity="0.95"/>
    
    <!-- Flag pole -->
    <rect x="49" y="25" width="2" height="12" fill="white"/>
    
    <!-- Flag -->
    <polygon points="51,25 51,30 58,27.5" fill="#EF4444"/>
    
    <!-- Windows -->
    <rect x="30" y="50" width="6" height="6" rx="1" fill="#2563EB" opacity="0.8"/>
    <rect x="64" y="50" width="6" height="6" rx="1" fill="#2563EB" opacity="0.8"/>
    <rect x="47" y="50" width="6" height="6" rx="1" fill="#2563EB" opacity="0.8"/>
    
    <!-- Door -->
    <rect x="47" y="60" width="6" height="15" rx="1" fill="#2563EB" opacity="0.9"/>
    <circle cx="51" cy="67" r="0.5" fill="white"/>
    
    <!-- Steps -->
    <rect x="42" y="75" width="16" height="2" fill="white" opacity="0.7"/>
    <rect x="40" y="77" width="20" height="2" fill="white" opacity="0.5"/>
  </g>
  
  <!-- Decorative elements -->
  <g fill="white" opacity="0.6">
    <!-- Small connecting elements -->
    <circle cx="35" cy="42" r="1.5"/>
    <circle cx="65" cy="42" r="1.5"/>
    
    <!-- Base foundation -->
    <rect x="20" y="79" width="60" height="3" rx="1.5" fill="white" opacity="0.4"/>
  </g>
</svg>